---
layout: theme
---

{{ 'section-customer-reset-password.css' | asset_url | stylesheet_tag }}

<div class="customer-reset-password">
  <!-- Floating bubbles decoration -->
  <div class="floating-bubbles">
    <div class="bubble bubble-1"></div>
    <div class="bubble bubble-2"></div>
    <div class="bubble bubble-3"></div>
    <div class="bubble bubble-4"></div>
    <div class="bubble bubble-5"></div>
    <div class="bubble bubble-6"></div>
    <div class="bubble bubble-7"></div>
    <div class="bubble bubble-8"></div>
    <div class="bubble bubble-9"></div>
    <div class="bubble bubble-10"></div>
    <div class="bubble bubble-11"></div>
    <div class="bubble bubble-12"></div>
  </div>

  <div class="page-width">
    <div class="reset-password-container">
      <header class="reset-password-header">
        <h1 class="reset-password-title">
          {{ 'customer.reset_password.title' | t }}
        </h1>
        <p class="reset-password-subtitle">
          {{ 'customer.reset_password.subtext' | t }}
        </p>
      </header>

      <div class="reset-password-content">
        <div class="reset-password-form-wrapper">
          {% form 'reset_customer_password' %}
            {% if form.errors %}
              <div class="form-errors" role="alert" aria-live="polite">
                <div class="errors-header">
                  <svg class="error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                  </svg>
                  <h2>{{ 'customer.reset_password.error_heading' | t }}</h2>
                </div>
                <ul class="errors-list">
                  {% for error in form.errors %}
                    <li>{{ error | first | capitalize }} {{ error | last }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            <div class="form-group">
              <label for="CustomerPassword" class="form-label">
                {{ 'customer.reset_password.password' | t }}
                <span class="required-indicator" aria-label="{{ 'customer.required_field' | t }}">*</span>
              </label>
              <div class="password-input-group">
                <input
                  type="password"
                  name="customer[password]"
                  id="CustomerPassword"
                  class="form-input"
                  required
                  aria-describedby="password-requirements"
                  autocomplete="new-password"
                >
                <button
                  type="button"
                  class="password-toggle"
                  aria-label="{{ 'customer.reset_password.show_password' | t }}"
                  data-password-toggle="CustomerPassword"
                >
                  <svg class="password-show-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                  <svg class="password-hide-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                    <line x1="1" y1="1" x2="23" y2="23"></line>
                  </svg>
                </button>
              </div>
              <div id="password-requirements" class="form-help">
                {{ 'customer.reset_password.password_requirements' | t }}
              </div>
            </div>

            <div class="form-group">
              <label for="CustomerPasswordConfirmation" class="form-label">
                {{ 'customer.reset_password.password_confirm' | t }}
                <span class="required-indicator" aria-label="{{ 'customer.required_field' | t }}">*</span>
              </label>
              <div class="password-input-group">
                <input
                  type="password"
                  name="customer[password_confirmation]"
                  id="CustomerPasswordConfirmation"
                  class="form-input"
                  required
                  autocomplete="new-password"
                >
                <button
                  type="button"
                  class="password-toggle"
                  aria-label="{{ 'customer.reset_password.show_password_confirm' | t }}"
                  data-password-toggle="CustomerPasswordConfirmation"
                >
                  <svg class="password-show-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                  <svg class="password-hide-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                    <line x1="1" y1="1" x2="23" y2="23"></line>
                  </svg>
                </button>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn-primary btn-large">
                <span class="btn-text">{{ 'customer.reset_password.submit' | t }}</span>
                <div class="btn-loading" aria-hidden="true">
                  <div class="loading-spinner"></div>
                </div>
              </button>
            </div>
          {% endform %}

          <div class="reset-password-footer">
            <p class="back-to-login">
              <a href="{{ routes.account_login_url }}" class="link-underline">
                <svg class="back-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15,18 9,12 15,6"></polyline>
                </svg>
                {{ 'customer.reset_password.back_to_login' | t }}
              </a>
            </p>
          </div>
        </div>

        <div class="reset-password-info">
          <div class="info-card">
            <div class="info-header">
              <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M9,12l2,2 4,-4"></path>
              </svg>
              <h3>{{ 'customer.reset_password.security_title' | t }}</h3>
            </div>
            <div class="info-content">
              <ul class="security-tips">
                <li>{{ 'customer.reset_password.security_tip_1' | t }}</li>
                <li>{{ 'customer.reset_password.security_tip_2' | t }}</li>
                <li>{{ 'customer.reset_password.security_tip_3' | t }}</li>
                <li>{{ 'customer.reset_password.security_tip_4' | t }}</li>
              </ul>
            </div>
          </div>

          <div class="help-card">
            <div class="help-header">
              <svg class="help-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M9,9a3,3,0,1,1,6,0c0,2-3,3-3,3"></path>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
              <h3>{{ 'customer.reset_password.help_title' | t }}</h3>
            </div>
            <div class="help-content">
              <p>{{ 'customer.reset_password.help_text' | t }}</p>
              <a href="{{ routes.contact_url }}" class="help-link">
                {{ 'customer.reset_password.contact_support' | t }}
                <svg class="external-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15,3 21,3 21,9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'section-customer-reset-password.js' | asset_url }}" defer></script>

 